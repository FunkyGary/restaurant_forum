<% if user != current_user %>
  <% if current_user.following?(user)%>
    <%= link_to 'Unfollow', followship_path(user), method: :delete %>
  <% else %>
    <%= link_to 'Follow', followships_path(following_id: user), method: :post %>
  <% end %>
  <% if current_user.friend?(user)%>
    <%= link_to 'Unfriend', friendship_path(user), method: :delete %>
  <% else %>
    <%= link_to 'Friend', friendships_path(friend_id: user), method: :post %>
  <% end %>
<% end %>
