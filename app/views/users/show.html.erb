<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>個人簡介</h1>
    </div>
    <div class="col-md-4">
      <br>
      <% if @user.avatar.url %>
        <div class="text-center">
          <%= image_tag @user.avatar.url, class: "img-responsive img-rounded" %>
        </div>
      <% end %>
      <div class="well">
        <ul class="list-unstyled">
          <li><%= @user.name %></li>
          <li><%= @user.email %></li>
          <li><%= @user.intro %></li>
          <%= link_to 'Edit', edit_user_path(current_user), class: "btn btn-primary"%>
        </ul>
      </div>
    </div>

    <div class="clearfix"></div>
    <%= link_to 'Back to index', root_path %>
  </div>
</div>
